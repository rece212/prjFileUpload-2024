@model List<prjFileUpload.Models.Assignment>

<h2>Upload Assignment</h2>
@using (Html.BeginForm("Upload", "Assignment", FormMethod.Post, 
new { enctype = "multipart/form-data" }))
{
    <label for="uploaderName">Your Name:</label>
    <input type="text" name="uploaderName" required />
    <br />
    <label for="file">Select file:</label>
    <input type="file" name="file" required />
    <br />
    <input type="submit" value="Upload" />
}

<h2>Uploaded Assignments</h2>
<table>
    <tr>
        <th>ID</th>
        <th>File Name</th>
        <th>Uploader Name</th>
        <th>Upload Date</th>
        <th>Actions</th>
    </tr>
    @foreach (var assignment in Model)
    {
        <tr>
            <td>@assignment.Id</td>
            <td>@assignment.FileName</td>
            <td>@assignment.UploaderName</td>
            <td>@assignment.UploadDate</td>
            <td>
                <a href="@Url.Action("OpenFile", "Assignment", new 
                { fileName = assignment.FileName })" target="_blank">Open</a>
            </td>
        </tr>
    }
</table>